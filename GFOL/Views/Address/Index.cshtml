@model AddressLookup.AddressListVM
@{
    ViewData["Title"] = "Index";
}
<gfol-row>
    <gfol-column desktop-size="FullWidth" tablet-size="FullWidth">
        <gfol-fieldset fieldset-type="NormalCol8">
            <a asp-action="Index" asp-controller="Form" asp-route-id="@Model.PageId" class="govuk-back-link">Back</a>
        </gfol-fieldset>
        <gfol-heading heading-type="H2" text="Please select an address for @Model.PostCode"></gfol-heading>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
            @foreach (var address in Model.Addresses)
            {
                <div class="govuk-summary-list__row" >
                    <dt class="govuk-summary-list__value govuk-summary-list__value-light" >
                        @address.SummaryLine
                    </dt>
                    <dt class="govuk-summary-list__value govuk-summary-list__value-light">
                        <a class="govuk-footer__link" asp-controller="Form" asp-action="SelectAddress" asp-route-nextPageId="@Model.NextPageId" asp-route-address="@address.SummaryLine">Select</a>
                    </dt>
                </div>
            }
        </dl>
    </gfol-column>
</gfol-row>

