@page
@model LoginModel

@{
    ViewData["Title"] = "Admin Log in";
}
<div class="govuk-width-container">
    <fieldset class="govuk-fieldset col-8">
        <a asp-action="Index" asp-controller="Home" class="govuk-back-link">Back</a>
    </fieldset>
    <main class="govuk-main-wrapper " id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <fieldset class="govuk-fieldset col-8">
                    <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="govuk-error-message"></div>

                        <div class="govuk-form-group">
                            <label class="govuk-label" asp-for="Input.Email"></label>
                            <input class="govuk-input" asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="govuk-error-message"></span>
                        </div>
                        <div class="govuk-form-group">
                            <label class="govuk-label" asp-for="Input.Password"></label>
                            <input class="govuk-input" asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="govuk-error-message"></span>
                        </div>
                        <div class="govuk-form-group">
                            <div class="govuk-checkboxes__item">
                                <input asp-for="Input.RememberMe" class="govuk-checkboxes__input" type="checkbox">
                                <label class="govuk-label govuk-checkboxes__label" for="rememberme2">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <div class="govuk-form-group">
                            <button type="submit" class="govuk-button">Log in</button>
                            <a class="govuk-button" asp-action="Index" asp-controller="Home">Cancel</a>
                        </div>
                        <div class="govuk-form-group">
                            <p>
                                <a class="govuk-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </fieldset>
            </div>
        </div>
    </main>

    @section Scripts {
        <partial name="_ValidationScriptsPartial"/>
    }

</div>